# Backend Environment Variables
# Скопируйте этот файл в .env и заполните значения

# База данных
DATABASE_URL=postgresql://user:password@localhost:5432/sadakadb

# Telegram Bot
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_SECRET_KEY=your_telegram_secret_key_here
ADMIN_TELEGRAM_IDS=123456789,987654321

# Платежные системы
# YooKassa (для РФ)
YOOKASSA_SHOP_ID=your_shop_id
YOOKASSA_SECRET_KEY=your_secret_key
YOOKASSA_TEST_MODE=true

# CloudPayments (международно)
CLOUDPAYMENTS_PUBLIC_ID=your_public_id
CLOUDPAYMENTS_API_SECRET=your_api_secret

# E-Replika API (синхронизация данных)
E_REPLIKA_API_URL=https://bot.e-replika.ru/api
E_REPLIKA_AUTH_TOKEN=your_auth_token

# Безопасность
SECRET_KEY=your_secret_key_here_generate_random_string
ENVIRONMENT=development  # development, production, test

# CORS (для продакшена)
ALLOWED_ORIGINS=http://localhost:5173,https://frontend-one-delta-95.vercel.app

# Логирование
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR

